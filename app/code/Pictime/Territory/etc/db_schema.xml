<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="pictime_territory" resource="default" engine="innodb" comment="Territory">
        <column xsi:type="int"
                name="id"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar"
                name="code"
                nullable="true"
                length="16"
                comment="Territory Code"/>
        <column xsi:type="varchar"
                name="label"
                nullable="true"
                length="256"
                comment="Territory Label"/>
        <column xsi:type="varchar"
                name="locale"
                nullable="true"
                length="8"
                comment="Territory Locale"/>
        <column xsi:type="varchar"
                name="currency"
                nullable="true"
                length="8"
                comment="Territory Currency"/>
        <column xsi:type="int"
                name="is_active"
                unsigned="false"
                nullable="false"
                identity="false"
                comment="Is Active"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="TERRITORY_CODE" indexType="btree">
            <column name="code"/>
        </index>
    </table>
</schema>
